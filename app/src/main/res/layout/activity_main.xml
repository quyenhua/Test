<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manhinh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myproject.huutam.test.MainActivity">

    <ImageButton
        android:id="@+id/imgBackOpen_45"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/back"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvMissionName_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="cursive"
        android:text="Mission"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imgbtAuto_45"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/imgbtRefresh_45"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/auto"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMissionName_45"
        app:layout_constraintLeft_toRightOf="@+id/imgViewPrevious_45"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintVertical_bias="0.064" />

    <ImageButton
        android:id="@+id/imgbtRefresh_45"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imgbtCamera"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgbtAuto_45"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/refresh"
        app:layout_constraintLeft_toRightOf="@+id/imgbtAuto_45"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/imgViewPrevious_45"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_image"
        android:cropToPadding="true"
        android:padding="3dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMissionName_45"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/imgtest34" />


    <RelativeLayout
        android:id="@+id/relativeLayout_45"
        android:layout_width="@dimen/activity_main_width"
        android:layout_height="@dimen/activity_main_width"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/game"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewPrevious_45"
        app:layout_constraintVertical_bias="0.531">


        <ImageView
            android:id="@+id/part1"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_alignTop="@+id/part2"
            android:layout_toEndOf="@+id/part_tool_45"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/part_tool_45" />

        <ImageView
            android:id="@+id/part2"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/part3"
            android:layout_toRightOf="@+id/part1"
            android:layout_toEndOf="@+id/part1" />

        <ImageView
            android:id="@+id/part3"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/part_tool_45"
            android:layout_toRightOf="@+id/part2"
            android:layout_toEndOf="@+id/part2" />


        <ImageView
            android:id="@+id/part4"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_below="@+id/part1"
            android:layout_toEndOf="@+id/part_tool_45"
            android:layout_toRightOf="@+id/part_tool_45"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part5"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_alignBottom="@+id/part4"
            android:layout_alignEnd="@+id/part2"
            android:layout_alignRight="@+id/part2"
            android:layout_alignTop="@+id/part6"
            android:layout_toEndOf="@+id/part4"
            android:layout_toRightOf="@+id/part4"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part6"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_below="@+id/part2"
            android:layout_toRightOf="@+id/part2"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/part7"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_below="@+id/part4"
            android:layout_toEndOf="@+id/part_tool_45"
            android:layout_toRightOf="@+id/part_tool_45"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part8"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_alignLeft="@+id/part5"
            android:layout_alignStart="@+id/part5"
            android:layout_below="@+id/part4"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part9"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_below="@+id/part5"
            android:layout_toEndOf="@+id/part8"
            android:layout_toRightOf="@+id/part8"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/part10"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_below="@+id/part7"
            android:layout_toEndOf="@+id/part_tool_45"
            android:layout_toRightOf="@+id/part_tool_45"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part11"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_alignTop="@+id/part10"
            android:layout_toEndOf="@+id/part10"
            android:layout_toRightOf="@+id/part10"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part12"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:layout_below="@+id/part9"
            android:layout_toEndOf="@+id/part11"
            android:layout_toRightOf="@+id/part11"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part_tool_45"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image_tool"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/khungphu"
            android:cropToPadding="true"
            android:padding="1dp"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/part0"
            android:layout_width="@dimen/activity_main_image"
            android:layout_height="@dimen/activity_main_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/part_tool_45"
            android:layout_toLeftOf="@+id/part10"
            android:layout_toStartOf="@+id/part10" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/imgBackHome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/home"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/tvMissionName_45"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBackOpen_45"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
