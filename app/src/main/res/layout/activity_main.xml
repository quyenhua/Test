<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manhinh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myproject.huutam.test.MainActivity">

    <ImageButton
        android:id="@+id/imgbtOpen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/imgbtCamera"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/open" />

    <ImageButton
        android:id="@+id/imgbtAuto"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/imgbtOpen"
        android:layout_alignStart="@+id/imgbtOpen"
        android:layout_alignTop="@+id/imgbtRefresh"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/imgbtOpen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtOpen"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/auto" />

    <ImageButton
        android:id="@+id/imgbtCamera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintLeft_toRightOf="@+id/imgbtOpen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgbtOpen"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/camera" />

    <ImageButton
        android:id="@+id/imgbtRefresh"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imgbtCamera"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/imgbtOpen"
        android:layout_toRightOf="@+id/imgbtOpen"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintLeft_toLeftOf="@+id/imgbtCamera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgbtAuto"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/refresh" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_image"
        android:cropToPadding="true"
        android:padding="3dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/tam" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/game"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.531">


        <ImageView
            android:id="@+id/part1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/part2"
            android:layout_toEndOf="@+id/part_tool"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/part_tool" />

        <ImageView
            android:id="@+id/part2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/part3"
            android:layout_toRightOf="@+id/part1"
            android:layout_toEndOf="@+id/part1" />

        <ImageView
            android:id="@+id/part3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/part_tool"
            android:layout_toRightOf="@+id/part2"
            android:layout_toEndOf="@+id/part2" />


        <ImageView
            android:id="@+id/part4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/part1"
            android:layout_toEndOf="@+id/part_tool"
            android:layout_toRightOf="@+id/part_tool"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/part4"
            android:layout_alignEnd="@+id/part2"
            android:layout_alignRight="@+id/part2"
            android:layout_alignTop="@+id/part6"
            android:layout_toEndOf="@+id/part4"
            android:layout_toRightOf="@+id/part4"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/part2"
            android:layout_toRightOf="@+id/part2"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/part7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/part4"
            android:layout_toEndOf="@+id/part_tool"
            android:layout_toRightOf="@+id/part_tool"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/part5"
            android:layout_alignStart="@+id/part5"
            android:layout_below="@+id/part4"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/part5"
            android:layout_toEndOf="@+id/part8"
            android:layout_toRightOf="@+id/part8"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/part10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/part7"
            android:layout_toEndOf="@+id/part_tool"
            android:layout_toRightOf="@+id/part_tool"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/part10"
            android:layout_toEndOf="@+id/part10"
            android:layout_toRightOf="@+id/part10"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/part9"
            android:layout_toEndOf="@+id/part11"
            android:layout_toRightOf="@+id/part11"
            android:background="@drawable/background_image"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part_tool"
            android:layout_width="70dp"
            android:layout_height="210dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/khungphu"
            android:cropToPadding="true"
            android:padding="1dp"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/part0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/part_tool"
            android:layout_alignStart="@+id/part_tool"
            android:layout_below="@+id/part7"
            android:cropToPadding="true"
            android:onClick="onClickImageSplit"
            android:padding="1dp"
            android:scaleType="fitXY" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
